{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/app/*"],
      "@config/*": ["src/app/config/*"],
      "@hooks/*": ["src/app/hooks/*"],
      "@container/*": ["src/app/container/*"],
      "@service/*": ["src/app/service/*"],
      "@controller/*": ["src/app/controller/*"],
      "@error/*": ["src/app/error/*"],
      "@mapper/*": ["src/app/mapper/*"],
      "@dto/*": ["src/app/dto/*"],
      "@models/*": ["src/app/models/*"],
      "@plugin/*": ["src/app/plugin/*"],
      "@queue/*": ["src/app/queue/*"],
      "@resource/*": ["src/app/resource/*"],
      "@repository/*": ["src/app/repository/*"],
      "@utility/*": ["src/app/utility/*"],
      "@route/*": ["src/app/route/*"]
    },

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma.config.ts", "prisma"]
}
