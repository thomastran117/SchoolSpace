{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"],
      "@container/*": ["src/container/*"],
      "@service/*": ["src/service/*"],
      "@controller/*": ["src/controller/*"],
      "@error/*": ["src/error/*"],
      "@mapper/*": ["src/mapper/*"],
      "@dto/*": ["src/dto/*"],
      "@models/*": ["src/models/*"],
      "@plugin/*": ["src/plugin/*"],
      "@queue/*": ["src/queue/*"],
      "@resource/*": ["src/resource/*"],
      "@repository/*": ["src/repository/*"],
      "@utility/*": ["src/utility/*"],
      "@route/*": ["src/route/*"]
    },

    "strict": true,
    "esModuleInterop": true,

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "prisma.config.ts", "prisma"]
}
